<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
</head>
<body>
   <div>
       <table border="1" cellpadding="5" align="center" width="800">
           <tr style="background-color:darkslategray; color:white; text-align:center">
               <td colspan="2">My ASP.NET Application</td>
           </tr>
           <tr height="300">
               <td width="250">
                   <ul>
                       <li>@Html.ActionLink("Home", "Home")</li>
                       <li>@Html.ActionLink("About", "About")</li>
                       <li>@Html.ActionLink("Contact", "Contact")</li>
                   </ul>
               </td>
               <td width="550">
                   @RenderBody();
               </td>
           </tr>
           <tr style="background-color:darkolivegreen; color:white; text-align:center">
               <td colspan="2">
                   &copy; @DateTime.Now.Year - My ASP.NET Application
               </td>
           </tr>
       </table>
   </div>
</body>
</html>
